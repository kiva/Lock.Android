<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="com_auth0_lock_tab_text">@color/color_primary</color>
    <color name="com_auth0_lock_tab_underline">@color/color_primary</color>

    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <color name="color_primary">#2EB688</color>
    <color name="color_secondary">#D6F4E9</color>
    <color name="color_background_secondary">#F1F1F7</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="color_background">#FFFFFF</color>
    <color name="color_background_dark">#40D8D8D8</color>
    <color name="color_surface">#F7F7F7</color>
    <color name="color_error">#B00020</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="color_on_primary">#ffffff</color>
    <color name="color_on_secondary">#121212</color>
    <color name="color_on_background">#121212</color>
    <color name="color_on_surface">#121212</color>
    <color name="color_on_error">#ffffff</color>

    <color name="color_text_light">#33121212</color>
    <color name="color_text_secondary">#46121212</color>
    <color name="color_text_primary">#99121212</color>

    <color name="color_shimmer_background">#DDDDDD</color>

    <!-- Overwriting Auth0 values -->
    <color name="com_auth0_lock_input_field_border_error">@color/color_error</color>
    <color name="com_auth0_lock_validation_error_text">@color/color_error</color>
    <color name="com_auth0_lock_text">@color/color_on_background</color>
    <color name="com_auth0_lock_checkable_option_success">@color/color_primary</color>
    <color name="com_auth0_lock_checkable_option_error">@color/color_error</color>
    <color name="com_auth0_lock_normal_text">@color/color_on_background</color>
</resources>

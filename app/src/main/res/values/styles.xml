<resources>
    <style name="Lock.Theme.Widget.Header">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/Auth0.HeaderBackground</item>
    </style>

    <style name="Lock.Theme.Widget.Logo">
        <item name="android:src">?attr/Auth0.HeaderLogo</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="Lock.Theme.Text.Header">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/com_auth0_lock_header_text</item>
        <item name="android:text">?attr/Auth0.HeaderTitle</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="Lock.Theme.Text.Link">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/com_auth0_lock_widget_vertical_margin_link
        </item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/com_auth0_lock_widget_vertical_margin_field</item>
        <item name="android:textSize">@dimen/com_auth0_lock_small_clickable_text</item>
    </style>
</resources>
